.industries
    .industries__container
        h2.industries__title ОТРАСЛИ ПРИМЕНЕНИЯ <br/> &nbsp;&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; СИСТЕМ НАКОПЛЕНИЯ ЭНЕРГИИ
        .industries__body 
            .industries__triggers
                ul.industries__list
                    each i in industries
                        li.industries__trigger(data-id= i.id)= i.trigger
